# Multi-stage build for ev-reth with ANDE Token Duality
# Stage 1: Build ev-reth from source
FROM rust:1.88-bookworm as builder

LABEL org.opencontainers.image.title="ev-reth with ANDE Token Duality Builder"
LABEL version="0.3.0"

WORKDIR /build

# Install build dependencies
RUN apt-get update && apt-get install -y \
    build-essential \
    libclang-dev \
    libssl-dev \
    pkg-config \
    git \
    && rm -rf /var/lib/apt/lists/*

# Clone ANDE-enabled ev-reth from GitHub
RUN git clone https://github.com/AndeLabs/ande-reth.git /build/ev-reth

# Build ev-reth with ANDE integration
WORKDIR /build/ev-reth
RUN cargo build --release --bin ev-reth

# Stage 2: Runtime image
FROM debian:bookworm-slim

LABEL org.opencontainers.image.title="ev-reth with ANDE Token Duality - Runtime"
LABEL org.opencontainers.image.description="AndeChain custom ev-reth with ANDE Token Duality integration"
LABEL version="0.3.0"

# Install runtime dependencies
RUN apt-get update && apt-get install -y \
    ca-certificates \
    libssl3 \
    curl \
    jq \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /root

# Copy the compiled binary from builder stage
COPY --from=builder /build/ev-reth/target/release/ev-reth /usr/local/bin/ev-reth
RUN chmod +x /usr/local/bin/ev-reth

# Create health check script
RUN echo '#!/bin/bash' > /usr/local/bin/health-check.sh && \
    echo 'echo "🔍 ANDE ev-reth Health Check - AndeChain"' >> /usr/local/bin/health-check.sh && \
    echo 'echo "=========================================="' >> /usr/local/bin/health-check.sh && \
    echo 'echo "📦 Version: $(ev-reth --version 2>/dev/null || echo \"Binary not found\")"' >> /usr/local/bin/health-check.sh && \
    echo 'echo "🔗 ANDE Integration: Type alias pattern implemented"' >> /usr/local/bin/health-check.sh && \
    echo 'echo "📍 Precompile Address: 0x00000000000000000000000000000000000000FD"' >> /usr/local/bin/health-check.sh && \
    echo 'echo "🚀 AndeChain Ready"' >> /usr/local/bin/health-check.sh && \
    chmod +x /usr/local/bin/health-check.sh

# Expose ports
EXPOSE 30303 30303/udp 9001 8545 8546 7545 8551

# Health check
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=3 \
    CMD /usr/local/bin/health-check.sh

# Default command
CMD ["/usr/local/bin/ev-reth"]
