# AndeChain Bridge Relayer Configuration

# ==================== NETWORK CONFIGURATION ====================

# AndeChain RPC
ANDECHAIN_RPC=https://rpc.andechain.io
ANDECHAIN_CHAIN_ID=999

# Ethereum RPC
ETHEREUM_RPC=https://eth-mainnet.g.alchemy.com/v2/YOUR_API_KEY
ETHEREUM_CHAIN_ID=1

# Polygon RPC (optional)
POLYGON_RPC=https://polygon-rpc.com
POLYGON_CHAIN_ID=137

# ==================== PRIVATE KEYS ====================

# Relayer private key (NEVER commit this to git!)
# This account needs:
# - ETH on destination chains for gas
# - Authorization to call bridge.receiveTokens()
RELAYER_PRIVATE_KEY=0x...

# ==================== CONTRACT ADDRESSES ====================

# AndeChain contracts
ANDECHAIN_BRIDGE=0x...
ANDECHAIN_XANDE=0x...
ANDECHAIN_AUSD=0x...
ANDECHAIN_ABOB=0x...
ANDECHAIN_LOCKBOX=0x...

# Ethereum contracts
ETHEREUM_BRIDGE=0x...
ETHEREUM_XANDE=0x...
ETHEREUM_AUSD=0x...
ETHEREUM_ABOB=0x...

# Polygon contracts (optional)
POLYGON_BRIDGE=0x...
POLYGON_XANDE=0x...
POLYGON_AUSD=0x...

# ==================== CELESTIA CONFIGURATION ====================

# Celestia Blobstream verifier
BLOBSTREAM_VERIFIER=0x...

# Celestia node RPC (for proof retrieval)
CELESTIA_RPC=https://rpc.celestia.org

# ==================== RELAYER SETTINGS ====================

# Polling interval (milliseconds)
POLL_INTERVAL=5000

# Batch size for processing events
BATCH_SIZE=10

# Number of confirmations to wait
MIN_CONFIRMATIONS_ANDECHAIN=6
MIN_CONFIRMATIONS_ETHEREUM=12
MIN_CONFIRMATIONS_POLYGON=128

# Retry settings
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=30000

# ==================== GAS SETTINGS ====================

# Gas price settings (in wei)
MAX_FEE_PER_GAS=100000000000
MAX_PRIORITY_FEE_PER_GAS=2000000000
GAS_LIMIT=500000

# Gas buffer (percentage)
GAS_BUFFER=1.2

# ==================== MONITORING ====================

# Enable monitoring
MONITORING_ENABLED=true

# Slack webhook for alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR_WEBHOOK

# Email alerts
ALERT_EMAIL=ops@andelabs.io

# PagerDuty integration key (optional)
PAGERDUTY_INTEGRATION_KEY=

# ==================== LOGGING ====================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Log format (json, pretty)
LOG_FORMAT=json

# Log file path
LOG_FILE=./logs/relayer.log

# ==================== DATABASE ====================

# Database for tracking processed transactions
# Options: sqlite, postgres, redis
DB_TYPE=sqlite
DB_PATH=./data/relayer.db

# For postgres:
# DB_TYPE=postgres
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=bridge_relayer
# DB_USER=relayer
# DB_PASSWORD=your_password

# ==================== SECURITY ====================

# Rate limit safety buffer (0.1 = 10%)
RATE_LIMIT_BUFFER=0.1

# Emergency pause threshold (failed txs per hour)
EMERGENCY_PAUSE_THRESHOLD=5

# Enable dry run mode (don't execute actual transactions)
DRY_RUN=false

# ==================== PERFORMANCE ====================

# Number of worker threads
WORKER_THREADS=4

# Maximum concurrent transactions
MAX_CONCURRENT_TXS=3

# Transaction timeout (milliseconds)
TX_TIMEOUT=300000

# ==================== DEVELOPMENT ====================

# Enable debug mode
DEBUG=false

# Mock Celestia proofs (for testing only!)
MOCK_PROOFS=false

# Use testnet contracts
USE_TESTNET=false
